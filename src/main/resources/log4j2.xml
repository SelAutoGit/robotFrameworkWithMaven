<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="APITesting" packages="">
    <Appenders>
        <File name="DefaultFile" fileName="log/RiskAPI_${date:yyyyMMddHHmmss}.log">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <follow>true</follow>
        </Console>

    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="DefaultFile"/>
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>